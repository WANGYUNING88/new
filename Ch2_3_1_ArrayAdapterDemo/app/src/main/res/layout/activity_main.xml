<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.onest.ch2_3_1_arrayadapterdemo.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ListView
        android:id="@+id/lv_subjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#FF0000"
        android:dividerHeight="1px"
        android:entries="@array/subjectNames"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

    <ListView
        android:id="@+id/lv_roles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#0000FF"
        android:dividerHeight="1px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_subjects" />
</android.support.constraint.ConstraintLayout>
